{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],

    "allowJs": true,
    "checkJs": true,
    "noEmit": true,

    "strict": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,

    "skipLibCheck": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "*": ["*"]
    }
  },
  "include": [
    "server/**/*.js",
    "tests/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "data",
    "coverage",
    "tracker",
    "dashboard"
  ]
}
